#read-title, #read-join, #read-more {
    background: linear-gradient(315deg,  #8FCDFF 0%,  #8FCDFF 100%);
    border: none;
}

#read-title {
    width: 100%;
    height: 11rem;
}
#read-title #word {
    font-size: 3rem;
    font-weight: bold;
    color: #7B463D;
    padding: 4rem 0;
    line-height: 3.3rem; 
}

#read-join, #read-more {
    width: 100%;
    text-align: center;
    font-size: 2rem;
}
#read-join a, #read-more a {
    font-weight: bold;
    color: #7B463D;
}

#read h4 img {
    width: 1.1rem;
    height: 1.1rem; 
}

@media (max-width: 460px) {
    #read-title #word {
        padding: 3rem 0;
        line-height: 3.3rem; 
    }
}